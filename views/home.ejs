<script>
    function joinRoom() {
        const roomId = document.getElementById("roomInput").value.trim();

        if (!roomId) {
            alert("Please enter a Room ID");
            return;
        }

        // Redirect to that room
        window.location.href = `/room/${roomId}`;
    }
</script>

